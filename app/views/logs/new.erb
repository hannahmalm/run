<h1>Create a new Run Log</h1>
<h2 style="color: red;"><%= flash[:errors] %></h2>
<h2 style="color: red;"><%= flash[:valid] %></h2>
<% if @log.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@log.errors.count, "Date cannot be in the future") %> </h2>

    <ul>
      <% @log.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="aligncenter">
<form method="POST" action="/logs">
    <label for="date">Date</label>  
    <input type="date" id="date" name="date" html5: true/>
    <br>
    <label for="distance">Distance</label>
    <input type="text" id="distance" name="distance" /> </label>Miles</label>
    <br>    
    <label for="pace">Pace</label>
    <input type="text" id="pace" name="pace" /> 
    <br>
    <label for="avg_heart_rate">Average Heart Rate</label>
    <input type="text" id="avg_heart_rate" name="avg_heart_rate" />
    <br>
    <label for="notes">Notes</label>
    <input type="text" id="notes" name="notes" />
    <br>
    <br>
    <input type="submit" value="Submit" />
</form>
</div>